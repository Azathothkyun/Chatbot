<?xml version="1.0" encoding="UTF-8"?>
<context>
  <input pattern="(Hola|buenas) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! Cuál es tu nombre uwu?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Un gusto conocerte $UserName!"/>
      </input>
<context>
<output value="Cuentame algo de ti uwu"/>
</context>
    </context>
  </input>
</context>
